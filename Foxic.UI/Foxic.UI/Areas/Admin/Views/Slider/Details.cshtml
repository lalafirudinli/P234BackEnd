@using Foxic.Core.Entities.Areas;
@model Slider
@{
    ViewData["Title"] = "Details";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Blank Page</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Slider</a></li>
                <li class="breadcrumb-item">Detail</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-6">

                <div class="card" style="width:60%">
                    <div class="card-body" style="padding:25px">
                        <img src="~/@Model.ImageUrl" style="width:200px" />
                        <h5 style="margin-top:20px" class="card-title">SliderName : @Model.Title</h5>
                        <p class="card-title">Description : @Model.Description</p>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>